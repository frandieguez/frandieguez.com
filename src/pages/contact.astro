---
import PageLayout from "@/layouts/Base.astro";

const meta = {
    description: "Get in touch with Fran Dieguez. Fill out the contact form and Iâ€™ll get back to you as soon as possible.",
    title: "Contact Me",
};
---

<PageLayout meta={meta}>
    <h1 class="title text-3xl md:text-4xl font-bold mb-2 text-accent-one">Contact Me</h1>
    <p class="text-gray-600 dark:text-gray-300 mb-8">
        I'd love to hear from you! Whether you have a question, feedback, or just want to say hello, fill out the form below and I'll get back to you as soon as possible.
    </p>
    <section class="flex flex-col items-center justify-center px-4">
        <div class="w-full max-w-2xl bg-white/90 dark:bg-black/60 shadow-lg rounded-2xl p-8 md:p-12 mt-6">
            <form
                action="https://formspree.io/f/xrbpbpkq"
                name="contact"
                class="space-y-6"
                method="POST"
                data-netlify="true"
                netlify-honeypot="bot-field"
            >
                <input type="hidden" name="bot-field" />
                <div class="grid grid-cols-1 gap-6">
                    <div>
                        <label for="name" class="block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-1">
                            Name
                        </label>
                        <input
                            type="text"
                            id="name"
                            name="name"
                            class="w-full px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-lg shadow-sm focus:ring-accent-one focus:border-accent-one bg-gray-50 dark:bg-gray-900 transition"
                            placeholder="Your name"
                            required
                        />
                    </div>
                    <div>
                        <label for="email" class="block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-1">
                            Email
                        </label>
                        <input
                            type="email"
                            id="email"
                            name="email"
                            class="w-full px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-lg shadow-sm focus:ring-accent-one focus:border-accent-one bg-gray-50 dark:bg-gray-900 transition"
                            placeholder="you@email.com"
                        />
                    </div>
                    <div>
                        <label for="message" class="block text-sm font-semibold text-gray-700 dark:text-gray-200 mb-1">
                            Message
                        </label>
                        <textarea
                            id="message"
                            name="message"
                            rows={5}
                            class="w-full px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-lg shadow-sm focus:ring-accent-one focus:border-accent-one bg-gray-50 dark:bg-gray-900 transition resize-none"
                            placeholder="Type your message here..."
                            required
                        />
                    </div>
                </div>
                <button
                    type="submit"
                    class="w-full py-3 text-white rounded-lg font-semibold bg-gradient-to-r from-accent-one to-accent-two shadow-lg hover:brightness-110 transition"
                >
                    Send Message
                </button>
            </form>
        </div>
    </section>
</PageLayout>
